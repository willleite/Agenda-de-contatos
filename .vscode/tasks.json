{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend",
      "type": "shell",
      "command": "uvicorn main:app --reload",
      "options": { "cwd": "backend" }
    },
    {
      "label": "frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "frontend" }
    },
    {
      "label": "start-all",
      "dependsOn": ["backend", "frontend"],
      "dependsOrder": "parallel"
    }
  ]
}
